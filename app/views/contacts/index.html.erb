<p id="notice"><%= notice %></p>
<div class="container">
  <p><span class="pull-left"><h2>Contacts</h2></span><span class="pull-right"><%= link_to 'New Contact', new_contact_path ,class:"btn btn-primary"%></span></p>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= link_to 'Show', contact ,class:"btn btn-success"%></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) ,class:"btn btn-default"%></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-warning"%></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <div style="text-align: center">
    <%= will_paginate @contacts, renderer: BootstrapPagination::Rails %>
  </div>
</div>
